# Remova.org Environment Variables
# Copy this file to .env.local and fill in your actual values

# App Configuration
APP_BASE_URL=http://127.0.0.1:6161
NODE_ENV=development

# Database (Heroku Postgres)
DATABASE_URL=postgresql://username:password@localhost:5432/remova_dev

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_STEALTH_ANNUAL=price_...
STRIPE_PRICE_VANISH_ANNUAL=price_...
STRIPE_PRICE_SHIELD_ANNUAL=price_...

# HubSpot Form (for thank-you page)
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=your_portal_id
NEXT_PUBLIC_HUBSPOT_FORM_ID=your_form_id

# Email Configuration (REQUIRED for email notifications)
# Option 1: Use Resend (recommended)
RESEND_API_KEY=re_...

# Option 2: Use SMTP (fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Search API (Phase 3 - Anonymity Checker)
SEARCH_API_PROVIDER=bing
SEARCH_API_KEY=your_bing_search_api_key

# Optional: Team notifications
TEAM_NOTIFICATIONS_EMAIL=team@remova.org